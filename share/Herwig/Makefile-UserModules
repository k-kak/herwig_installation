CXX = /usr/bin/clang++ -std=c++14

CXXFLAGS = -g -W -Wall -O2 -DBOOST_UBLAS_NDEBUG

# add additional package header directories here
CPPFLAGS = -I/Users/user/phd/herwig_gh/./include -I/opt/homebrew/Cellar/thepeg/2.3.0_1//include -I/opt/homebrew/Cellar/gsl/2.8//include

# add additional libraries here
LDFLAGS = -Wl,-undefined,dynamic_lookup

ALLCCFILES=$(shell echo *.cc)
all : $(ALLCCFILES:.cc=.so)

%.so : %.cc %.h 
	$(CXX) -bundle -fPIC $(CPPFLAGS) $(CXXFLAGS) $(LDFLAGS) $< -o $@  

clean:
	rm -f $(ALLCCFILES:.cc=.so)
